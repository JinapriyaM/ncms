<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <servlet>
        <servlet-name>Sample</servlet-name>
        <servlet-class>lk.spark.sample.Sample</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>Sample</servlet-name>
        <url-pattern>/hello</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>HospitalServlet</servlet-name>
        <servlet-class>lk.spark.sample.controller.HospitalServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>HospitalServlet</servlet-name>
        <url-pattern>/hospital/*</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>DoctorServlet</servlet-name>
        <servlet-class>lk.spark.sample.controller.DoctorServlet</servlet-class>
    </servlet>
    
    <servlet-mapping>
        <servlet-name>DoctorServlet</servlet-name>
        <url-pattern>/doctor/*</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>PatientServlet</servlet-name>
        <servlet-class>lk.spark.sample.controller.PatientServlet</servlet-class>
    </servlet>
    
    <servlet-mapping>
        <servlet-name>PatientServlet</servlet-name>
        <url-pattern>/regPatient</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>StatisticServlet</servlet-name>
        <servlet-class>lk.spark.sample.controller.StatisticServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>StatisticServlet</servlet-name>
        <url-pattern>/statistics</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>UserServlet</servlet-name>
        <servlet-class>lk.spark.sample.controller.UserServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>UserServlet</servlet-name>
        <url-pattern>/user/*</url-pattern>
    </servlet-mapping>
    
    
    
</web-app>